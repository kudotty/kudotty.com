root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 3スペース・インデントのススメ 〜空白3つコーディングへの考察〜
# http://marycore.jp/coding/indent-using-three-spaces/
indent_size = 3

[{package,bower}.json]
indent_size = 2

[*.{coffee,hs,py,yaml,yml}]
indent_size = 2

[*.{c,cpp,cs,java}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
